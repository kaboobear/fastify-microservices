generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

enum Role {
  user
  manager
  admin
}

model Auth {
  id                 Int      @id @default(autoincrement())
  password_hash      String
  user_id            Int
  email              String
  refresh_token_hash String
  role               Role     @default(user)
  created_at         DateTime @default(now())
}
