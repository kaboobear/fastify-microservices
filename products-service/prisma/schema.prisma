generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Product {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  price       Int
  stock       Int     @default(10)
  isActive    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title])
  @@index([isActive])
}
